@using MyLittleContentEngine
@inject ContentEngineOptions Options

<header class="@HeaderClass">
    <nav class="@NavClass">
        @if (HeaderIcon != null)
        {
            @HeaderIcon
        }

        <h1>
            <a class="@TitleClass" href="./">
                @Options.SiteTitle
            </a>
        </h1>
        <div class="@ActionAreaClass">
            <ThemeToggle />
            @if (ExtraButtons != null)
            {
                @ExtraButtons
            }
        </div>
    </nav>
</header>

@code {
    [Parameter] public string HeaderClass { get; set; } = "sticky top-0 w-full backdrop-blur backdrop-grayscale bg-primary-100/90 dark:bg-primary-900/50 border-b border-primary-900/20 dark:border-primary-50/10 shadow-md dark:shadow-lg py-2 md:py-4 z-50";
    [Parameter] public string NavClass { get; set; } = "mx-auto max-w-7xl transition-all px-6 md:px-8 xl:px-16 flex items-center";
    [Parameter] public string TitleClass { get; set; } = "transition-all font-extrabold text-2xl md:text-4xl text-primary-700 dark:text-primary-100";
    [Parameter] public string ActionAreaClass { get; set; } = "ml-auto space-x-6 flex items-center";
    [Parameter] public RenderFragment? HeaderIcon { get; set; }
    [Parameter] public RenderFragment? ExtraButtons { get; set; }
}