@using BlazorStatic.Models
@using BlazorStatic.Services
@inject BlazorStaticContentService<FrontMatter> BlazorStaticContentService

<article class="flex max-w-xl flex-col items-start justify-between text-base-950 dark:text-base-300">

<div class="flex items-center gap-x-4 text-xs">
    <time datetime="@Post.FrontMatter.Date">@Post.FrontMatter.Date.ToString("MMM dd, yyyy")</time>
    @foreach (var tag in Post.Tags)
    {
        <a class="rounded-lg bg-primary-200/25 dark:bg-neutral-900/25 border-primary-200 dark:border-primary-700 border px-3 py-1.5 text-neutral-700 dark:text-neutral-300 hover:bg-primary-200/50 dark:hover:bg-primary-900/25" href="@tag.NavigateUrl">@tag.Name</a>    
    }
</div>
<div class="group relative">
    <h3 class="mt-3 text-2xl font-semibold">
        <a href="@Post.NavigateUrl">
            <span class="absolute inset-0"></span>
            @Post.FrontMatter.Title
        </a>
    </h3>
    <p class="mt-5 line-clamp-3 text-sm">@Post.FrontMatter.Description</p>
</div>
</article>
@code {
    [Parameter] public required Post<FrontMatter> Post { get; set; }
}