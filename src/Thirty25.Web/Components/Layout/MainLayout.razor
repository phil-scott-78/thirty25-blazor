@inherits LayoutComponentBase

<BaseHeader HeaderIcon="@Globals.HeaderIcon" ExtraButtons="@extraButtons" />

<main class="mx-auto max-w-7xl px-6 md:px-8 xl:px-16 mt-4">
    @Body
</main>

<footer class="mx-auto max-w-7xl px-6 md:px-8 xl:px-16 mb-4 lg:mb-64">
    <div class=" mt-16 lg:mt-24 p-6 lg:p-12 bg-primary-50 dark:bg-primary-900 border border-base-400 dark:border-primary-700/75 rounded rounded-xl shadow shadow-md">
        @Globals.Footer
    </div>
</footer>

@code {
    private readonly RenderFragment extraButtons =
        @<div>
            @foreach (var button in Globals.ExtraHeaderButtons)
            {
                @button
            }
        </div>;
}