@using BlazorStatic
@inherits LayoutComponentBase
@inject BlazorStaticOptions Options

<header
    class="sticky top-0 w-full backdrop-blur backdrop-grayscale bg-primary-100/90 dark:bg-primary-900/90 border-b border-primary-900/20 dark:border-primary-50/10 shadow-md dark:shadow-lg py-2 md:py-4 z-50">
    <nav class="mx-auto max-w-7xl transition-all px-6 md:px-8 xl:px-16 flex  items-center">

        @Globals.HeaderIcon

        <h1>
            <a class="transition-all font-extrabold text-2xl md:text-4xl text-primary-700 dark:text-primary-100" href="./">
                @Options.BlogTitle
            </a>
        </h1>
        <div class="ml-auto space-x-6 flex items-center">
            <button aria-label="Toggle Dark Mode" class="dark:text-yellow-300 stroke-1 opacity-80"
                    onclick="swapTheme()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
            </button>
            @foreach(var button in Globals.ExtraHeaderButtons)
            {
                @button
            }
        </div>
    </nav>
</header>

<main class="mx-auto max-w-7xl px-6 md:px-8 xl:px-16 mt-4">
    @Body
</main>

<footer class="mx-auto max-w-7xl px-6 md:px-8 xl:px-16 mb-4 lg:mb-64">
    <div class=" mt-16 lg:mt-24 p-6 lg:p-12 bg-primary-50 dark:bg-primary-900 border border-base-400 dark:border-primary-700/75 rounded rounded-xl shadow shadow-md">
        @Globals.Footer
    </div>
</footer>