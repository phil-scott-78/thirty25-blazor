@using BlazorStatic.Models

<div class="space-y-6 md:space-y-10  divide-y divide-base-200 dark:divide-primary-900/50">
@foreach (var post in Posts)
{
    <div class="pt-4 md:pt-8">
        <BlogSummary MarkdownContentPage="post"></BlogSummary>
    </div>
}
</div>

@code {
    [Parameter] public required IList<MarkdownContentPage<BlogFrontMatter>> Posts { get; set; }
}